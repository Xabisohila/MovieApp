@model IEnumerable<MovieApp.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<p>
  @*  @Html.ActionLink("New Customer", "New", "Customer", null, new { @class = "btn btn-primary" }) *@
    <a asp-action="New" asp-controller="Customer" class="btn btn-primary">New Customer</a> 
</p>
<br />
<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer(s)</th>
            <th>Email</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script src="~/lib/jquery/dist/jquery.js">
    $(document).ready(function () {
        var source = '@(ViewBag.SourcePageCustomers)';

        if (source == "Save") {
            var $toastContent = $('<span>Customer was successfully Addedd....</span>');
            materialize.toast($toastContent, 5000);
            sou = null;
        }
    });
</script>