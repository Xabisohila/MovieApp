@model MovieApp.Models.Movie

@{ 
    ViewBag.Title = Model.name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.name</h2>
<ul>
    <li>
        Genre: @Model.Genre.Name
    </li>
    <li>
        Release Date: @Model.ReleaseDate.Date.ToString()
    </li>
    <li>
        Date Added: @Model.DateAdded.Date.ToString()
    </li>
    <li>
        Number in Stock: @Model.NumberInStock
    </li>
</ul>